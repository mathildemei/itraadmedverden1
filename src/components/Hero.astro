    font-weight: var(--font-weight-light);
    color: var(--white);
    padding: 2rem 0;
  }

  #hero-undertekst {
    color: var(--white);
    opacity: 80%;
    font-weight: var(--font-weight-light);
    font-size: 24px;
  }

  .hero_wrapper {
    position: relative;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
