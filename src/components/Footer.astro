    <div class="icon-container">
      <img src="/img/Facebook.png" alt="" class="small-icon" />
      <img src="/img/Instagram.png" alt="" class="small-icon" />
      <img src="/img/Linkedin.png" alt="" class="small-icon" />
    </div>
  </article>
</footer>

<style>
  .centered {
    background-color: #3d5d6d;
  }

  h3,
  h4,
  button {
    color: #ffffff;
    font-family: Helvetica, sans-serif;
  }

  h3 {
    font-size: 1.4em;
    padding-top: 112px;
    padding-bottom: 24px;
    padding-left: 98px;
  }

  h4 {
    font-size: 1em;
    padding-bottom: 12px;
    padding-left: 98px;
  }

  .beige {
    background-color: #efeee9;
    padding-top: 48px;
    padding-bottom: 64px;
    padding-left: 64px;
  }

  .beige2 {
    background-color: #efeee9;
    padding-top: 48px;
    padding-bottom: 64px;
    padding-left: 0px;
    padding-right: 0px;
    line-height: 1.2rem;
  }

  .beige2 li {
    background-color: #efeee9;
    padding-top: 4px;
    padding-bottom: 24px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    font-family:
      Helvetica Light,
      sans-serif;
  }

  .footer-grid article:nth-child(1) {
    background-color: #efeee9;
  }

  .footer-grid article:nth-child(2) {
    background-color: #efeee9;
  }

  .footer-grid article:nth-child(3) {
    background-color: #3d5d6d;
  }

  article li {
    margin-bottom: 12px;
    color: #1b2830;
    padding: 4px;
    padding-left: 0px;
    padding-right: 0px;
    list-style: none;
  }

  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  input {
    width: 288px;
    height: 46px;
    border: none;
    border-radius: 4px;
    background-color: #ffffff;
    margin-bottom: 12px;
    margin-left: 98px;
  }

  .outlined-button {
    width: 288px;
    height: 46px;
    border: 1px solid #ffffff;
    border-radius: 5px;
    text-align: center;
    background-color: transparent;
    color: #ffffff;
    font-size: 16px;
    margin-bottom: 12px;
    margin-left: 98px;
  }

  .outlined-button:hover {
    background-color: #ffffff;
    color: #3d5d6d;
    cursor: pointer;
  }

  .small-icon {
    width: 48px;
    height: 48px;
    margin-right: 4px;
  }

  .icon-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 36px;
  }

  ul {
    list-style: none;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr; /* Set columns to 1 for smaller screens */
      grid-template-rows: 2;
    }

    .beige {
      padding-left: 15px;
    }
    .beige2 {
      padding-left: 20px; /* Adjust left padding for better alignment */
      padding-right: 20px; /* Adjust right padding for better alignment */
    }
    .centered {
      padding: 20px; /* Add padding for better spacing */
      display: grid;
      grid-column: 1 / span 2;
      grid-row: 2;
    }
    input,
    .outlined-button {
      width: 100%; /* Set input and button width to 100% for smaller screens */
      margin-left: 0; /* Reset margin-left */
    }
  }
</style>
